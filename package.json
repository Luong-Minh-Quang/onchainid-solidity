{
  "name": "@onchain-id/solidity",
  "version": "2.2.2-beta3",
  "description": "EVM solidity smart contracts for Blockchain OnchainID identities.",
  "files": [
    "artifacts",
    "contracts",
    "index.js",
    "index.d.ts",
    "typechain-types"
  ],
  "scripts": {
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "compile": "npx hardhat compile",
    "lint:js": "npx eslint \"**/*.js\"",
    "lint:js-fix": "npx eslint \"**/*.js\" --fix",
    "lint:sol": "npx prettier \"**/*.{json,sol,md}\" --check && npx solhint \"contracts/**/*.sol\"",
    "lint:sol-fix": "npx prettier \"**/*.{json,sol,md}\" --write && npx solhint \"contracts/**/*.sol\" --fix",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js-fix && npm run lint:sol-fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onchain-id/solidity.git"
  },
  "keywords": [
    "onchainid",
    "identity",
    "erc734",
    "erc735",
    "ethereum",
    "solidity",
    "smart contracts"
  ],
  "author": "OnchainID Organization",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onchain-id/solidity/issues"
  },
  "homepage": "https://github.com/onchain-id/solidity#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomiclabs/hardhat-solhint": "^3.1.0",
    "@openzeppelin/contracts": "^5.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-promise": "^7.2.1",
    "hardhat": "^2.25.0",
    "hardhat-contract-sizer": "^2.8.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solady": "^0.1.15",
    "solhint": "^6.0.0",
    "solhint-community": "^4.0.1",
    "solidity-coverage": "^0.8.14"
  },
  "dependencies": {
    "@account-abstraction/contracts": "^0.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0"
  }
}
